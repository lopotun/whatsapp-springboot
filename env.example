# WhatsApp Chat Viewer - Environment Variables Template
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection URL (PostgreSQL)
WHATSAPPCHATVIEWER_DATABASE_URL=jdbc:postgresql://localhost:5432/whatsapp_chatviewer

# Database credentials
WHATSAPPCHATVIEWER_DB_USERNAME=postgres
WHATSAPPCHATVIEWER_DB_PASSWORD=your_secure_database_password_here

# =============================================================================
# ADMIN USER CONFIGURATION
# =============================================================================
# Admin user credentials for basic auth
WHATSAPPCHATVIEWER_ADMIN_USERNAME=admin
WHATSAPPCHATVIEWER_ADMIN_PASSWORD=your_secure_admin_password_here

# =============================================================================
# GOOGLE OAUTH2 CONFIGURATION
# =============================================================================
# Google OAuth2 client credentials
WHATSAPPCHATVIEWER_GOOGLE_CLIENT_ID=your_google_client_id_here
WHATSAPPCHATVIEWER_GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Path for storing multimedia files
MULTIMEDIA_STORAGE_PATH=./multimedia-files

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port
SERVER_PORT=8080

# SSL Configuration
SSL_ENABLED=false
SSL_KEYSTORE=
SSL_KEYSTORE_PASSWORD=
SSL_KEY_ALIAS=

# Session timeout
SESSION_TIMEOUT=30m

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Use strong, unique passwords for each environment
# 2. Never use default passwords in production
# 3. Rotate credentials regularly
# 4. Use different credentials for dev/staging/production
# 5. Consider using a secrets management service for production
